{{template "searchbox" .}}


{{if .ListingSummaries}}
  <div class="row">
  {{range .ListingSummaries}}
      <div class="media">
        <a class="media-left" href="/listing/{{.Id}}">
          <img data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
        </a>
        <div class="media-body">
          <div class="pull-right">{{if .IsOrg}}Organisation{{else}}Individual{{end}}</div>
          <h4 class="media-heading"><a href="/listing/{{.Id}}">{{.Name}}</a></h4>
          {{shortDesc .ShortDesc}}
        </div>
      </div>

  {{end}}
  </div>
{{else}}
  <p><i>No matches.</i></p>
{{end}}
